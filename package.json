{
  "name": "profile-weather-view",
  "version": "2.0.0",
  "type": "module",
  "description": "Fetches and updates my GitHub profile with current weather data",
  "main": "src/weather-update/index.ts",
  "scripts": {
    "lint": "bunx eslint . --fix",
    "format": "bunx prettier --write .",
    "check": "bun run lint && bun run format",
    "type-check": "bun run tsc --noEmit",
    "dev": "bun run src/weather-update/index.ts",
    "build": "bun run build",
    "start": "bun run build && bun run src/weather-update/index.ts",
    "test": "bunx vitest",
    "test:staged": "bunx vitest --run",
    "test:watch": "bunx vitest --watch",
    "test:coverage": "bunx vitest --coverage",
    "check-all": "bunx vitest --run && bun run tsc --noEmit && bun format && bun lint",
    "prepare": "husky",
    "commit": "bunx commit",
    "docs:dev": "vitepress dev src/docs",
    "docs:build": "vitepress build src/docs",
    "docs:preview": "vitepress preview src/docs"
  },
  "keywords": [
    "weather",
    "GitHub",
    "profile",
    "Bun",
    "OpenWeather"
  ],
  "author": "Tashfiqul Islam",
  "license": "MIT",
  "engines": {
    "bun": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/expect": "^3.0.9",
    "autoprefixer": "^10.4.21",
    "bun-types": "^1.2.5",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-stylistic": "^0.0.0-0",
    "eslint-plugin-unicorn": "^57.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tseslint": "^0.0.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "@tailwindcss/postcss": "^4.0.15",
    "@tailwindcss/vite": "^4.0.15",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "markdown-it": "^14.1.0",
    "markdown-it-mathjax3": "^4.3.2",
    "tailwindcss": "^4.0.15",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.24.2"
  }
}
