{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "profile-weather-view",
  "version": "2.4.2",
  "type": "module",
  "description": "TypeScript utility that fetches real-time weather data and updates GitHub profile READMEs automatically",
  "main": "src/weather-update/index.ts",
  "engines": {
    "bun": ">=1.3.1",
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/tashfiqul-islam/profile-weather-view"
  },
  "scripts": {
    "// Development": "",
    "dev": "bun run src/weather-update/index.ts",
    "workflow": "bun run src/scripts/dev-workflow.ts",
    "dx": "bun run src/scripts/dev-cli.ts",
    "start": "bun run build && bun run src/weather-update/index.ts",
    "// Build": "",
    "build": "bun build src/weather-update/index.ts --outdir ./dist",
    "build:prod": "bun build src/weather-update/index.ts --outdir ./dist --minify",
    "// Testing": "",
    "test": "bun run src/scripts/test-pretty.ts",
    "test:ci": "bun test --reporter=dots",
    "test:watch": "bun test --watch --reporter=dots",
    "test:coverage": "bun test --coverage --reporter=dots",
    "test:staged": "bun test $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.[Tt][Ee][Ss][Tt]\\.(ts|js)$' || echo 'src/tests') --reporter=verbose",
    "test:debug": "bun test --inspect-brk --reporter=dots",
    "test:unit": "bun test src/tests/unit --reporter=dots",
    "test:integration": "bun test src/tests/integration --reporter=dots",
    "test:concurrent": "bun test --concurrent --reporter=dots",
    "test:serial": "bun test --serial --reporter=dots",
    "test:fast": "bun test --reporter=dots",
    "test:quiet": "bun test --reporter=dots --silent",
    "// Quality": "",
    "lint": "bunx ultracite check",
    "lint:check": "bunx ultracite check",
    "format": "bunx ultracite fix",
    "format:check": "bunx ultracite fix",
    "type-check": "bun run tsc --noEmit",
    "check": "bun run format && bun run check",
    "check-all": "bun run type-check && bun run format:check && bun run lint:check && bun run test:ci",
    "format-all": "bun run type-check && bun run test:ci && bun run format && bun run lint",
    "renovate:validate": "bunx -p renovate renovate-config-validator || bunx -p renovate renovate --version",
    "// Security": "",
    "security": "bunx biome check --apply",
    "audit": "bun audit",
    "validate-deps": "bun run src/scripts/validate-dependency-system.ts",
    "sync-readme-tech-stack": "bun run src/scripts/sync-readme-tech-stack.ts",
    "// Version Control & CI": "",
    "prepare": "lefthook install",
    "commit": "bunx commit",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun run prepare",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "weather",
    "GitHub",
    "profile",
    "Bun",
    "OpenWeather",
    "typescript",
    "automation",
    "github-actions",
    "zod"
  ],
  "author": {
    "name": "Tashfiqul Islam",
    "url": "https://github.com/tashfiqul-islam"
  },
  "license": "MIT",
  "homepage": "https://github.com/tashfiqul-islam/profile-weather-view#readme",
  "bugs": {
    "url": "https://github.com/tashfiqul-islam/profile-weather-view/issues"
  },
  "dependencies": {
    "@js-temporal/polyfill": "0.5.1",
    "@types/connect": "^3.4.38",
    "axios": "^1.13.0",
    "connect": "^3.7.0",
    "dotenv": "^17.2.3",
    "lefthook": "^2.0.1",
    "profile-weather-view": ".",
    "ultracite": "^6.0.4",
    "vite": "^7.1.12",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@biomejs/biome": "^2.3.1",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/cz-commitlint": "20.1.0",
    "@commitlint/parse": "20.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.0",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.9.1",
    "bun-types": "1.3.1",
    "commitizen": "4.3.1",
    "lint-staged": "16.2.6",
    "semantic-release": "25.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "overrides": {
    "tmp": ">=0.2.4"
  }
}
