{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "profile-weather-view",
  "version": "1.2.24",
  "type": "module",
  "description": "TypeScript utility that fetches real-time weather data and updates GitHub profile READMEs automatically",
  "main": "src/weather-update/index.ts",
  "engines": {
    "bun": ">=1.2.17",
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.2.17",
  "repository": {
    "type": "git",
    "url": "https://github.com/tashfiqul-islam/profile-weather-view"
  },
  "scripts": {
    "// Development": "",
    "dev": "bun run src/weather-update/index.ts",
    "start": "bun run build && bun run src/weather-update/index.ts",
    "// Build": "",
    "build": "bun build src/weather-update/index.ts --outdir ./dist",
    "build:prod": "bun build src/weather-update/index.ts --outdir ./dist --minify",
    "// Testing": "",
    "test": "bunx vitest",
    "test:ci": "bunx vitest --run",
    "test:watch": "bunx vitest --watch",
    "test:coverage": "bunx vitest --coverage",
    "test:staged": "bunx vitest --run $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.test\\.(ts|js)$' || echo 'src')",
    "// Quality": "",
    "lint": "bunx eslint . --fix",
    "lint:check": "bunx eslint . --max-warnings=0",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "type-check": "bun run tsc --noEmit",
    "check": "bun run lint && bun run format",
    "check-all": "bun run type-check && bun run test:ci && bun run lint:check && bun run format:check",
    "format-all": "bun run type-check && bun run test:ci && bun run format && bun run lint",
    "// Security": "",
    "security": "bunx biome check --apply",
    "audit": "bun audit",
    "validate-deps": "bun run src/scripts/validate-dependency-system.ts",
    "// Version Control & CI": "",
    "prepare": "husky",
    "commit": "bunx commit",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun run prepare",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "weather",
    "GitHub",
    "profile",
    "Bun",
    "OpenWeather",
    "typescript",
    "automation",
    "github-actions",
    "zod"
  ],
  "author": {
    "name": "Tashfiqul Islam",
    "url": "https://github.com/tashfiqul-islam"
  },
  "license": "MIT",
  "homepage": "https://github.com/tashfiqul-islam/profile-weather-view#readme",
  "bugs": {
    "url": "https://github.com/tashfiqul-islam/profile-weather-view/issues"
  },
  "dependencies": {
    "@js-temporal/polyfill": "0.5.1",
    "@types/connect": "^3.4.38",
    "axios": "^1.10.0",
    "connect": "^3.7.0",
    "dotenv": "^16.5.0",
    "vite": "^6.3.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/parse": "19.8.1",
    "@eslint/js": "9.30.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.3",
    "@stylistic/eslint-plugin": "4.4.1",
    "@types/bun": "^1.2.16",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/expect": "^3.2.4",
    "bun-types": "1.2.17",
    "eslint": "9.30.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sonarjs": "3.0.4",
    "eslint-plugin-stylistic": "0.0.0-0",
    "eslint-plugin-unicorn": "59.0.1",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "prettier": "3.5.3",
    "semantic-release": "24.2.6",
    "ts-node": "10.9.2",
    "tseslint": "0.0.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  }
}
