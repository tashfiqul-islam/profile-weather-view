{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "profile-weather-view",
  "version": "1.2.24",
  "type": "module",
  "description": "TypeScript utility that fetches real-time weather data and updates GitHub profile READMEs automatically",
  "main": "src/weather-update/index.ts",
  "engines": {
    "bun": ">=1.2.19",
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.2.19",
  "repository": {
    "type": "git",
    "url": "https://github.com/tashfiqul-islam/profile-weather-view"
  },
  "scripts": {
    "// Development": "",
    "dev": "bun run src/weather-update/index.ts",
    "start": "bun run build && bun run src/weather-update/index.ts",
    "// Build": "",
    "build": "bun build src/weather-update/index.ts --outdir ./dist",
    "build:prod": "bun build src/weather-update/index.ts --outdir ./dist --minify",
    "// Testing": "",
    "test": "bunx vitest",
    "test:ci": "FORCE_COLOR=1 bunx vitest --run",
    "test:watch": "bunx vitest --watch",
    "test:coverage": "bunx vitest --coverage",
    "test:staged": "bunx vitest --run $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.test\\.(ts|js)$' || echo 'src')",
    "// Quality": "",
    "lint": "bunx ultracite lint",
    "lint:check": "bunx ultracite lint",
    "format": "bunx ultracite format",
    "format:check": "bunx ultracite format",
    "type-check": "bun run tsc --noEmit",
    "check": "bun run lint && bun run format",
    "check-all": "bun run type-check && bun run format:check && bun run lint:check && bun run test:ci",
    "format-all": "bun run type-check && bun run test:ci && bun run format && bun run lint",
    "// Security": "",
    "security": "bunx biome check --apply",
    "audit": "bun audit",
    "validate-deps": "bun run src/scripts/validate-dependency-system.ts",
    "sync-readme-tech-stack": "bun run src/scripts/sync-readme-tech-stack.ts",
    "// Version Control & CI": "",
    "prepare": "husky",
    "commit": "bunx commit",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun run prepare",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "weather",
    "GitHub",
    "profile",
    "Bun",
    "OpenWeather",
    "typescript",
    "automation",
    "github-actions",
    "zod"
  ],
  "author": {
    "name": "Tashfiqul Islam",
    "url": "https://github.com/tashfiqul-islam"
  },
  "license": "MIT",
  "homepage": "https://github.com/tashfiqul-islam/profile-weather-view#readme",
  "bugs": {
    "url": "https://github.com/tashfiqul-islam/profile-weather-view/issues"
  },
  "dependencies": {
    "@js-temporal/polyfill": "0.5.1",
    "@types/connect": "^3.4.38",
    "axios": "^1.11.0",
    "connect": "^3.7.0",
    "dotenv": "^17.2.1",
    "vite": "^7.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/parse": "19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.3",
    "@types/bun": "1.2.19",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/expect": "3.2.4",
    "@vitest/ui": "3.2.4",
    "bun-types": "1.2.19",
    "husky": "9.1.7",
    "lint-staged": "^16.1.4",
    "semantic-release": "24.2.7",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "ultracite": "5.1.2",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bunx ultracite format"
    ]
  }
}
