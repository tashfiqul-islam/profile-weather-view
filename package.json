{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "profile-weather-view",
  "version": "3.0.0",
  "type": "module",
  "description": "TypeScript utility that fetches real-time weather data and updates GitHub profile READMEs automatically",
  "author": {
    "name": "Tashfiqul Islam",
    "url": "https://github.com/tashfiqul-islam"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tashfiqul-islam/profile-weather-view.git"
  },
  "homepage": "https://github.com/tashfiqul-islam/profile-weather-view#readme",
  "bugs": {
    "url": "https://github.com/tashfiqul-islam/profile-weather-view/issues"
  },
  "keywords": [
    "weather",
    "github",
    "profile",
    "bun",
    "automation",
    "github-actions",
    "typescript",
    "zod"
  ],
  "engines": {
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "main": "./src/weather-update/index.ts",
  "exports": {
    ".": {
      "types": "./src/weather-update/index.ts",
      "bun": "./src/weather-update/index.ts",
      "default": "./src/weather-update/index.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "bun --watch src/weather-update/index.ts",
    "start": "bun src/weather-update/index.ts",
    "build": "bun build src/weather-update/index.ts --outdir dist --target bun",
    "build:prod": "bun build src/weather-update/index.ts --outdir dist --target bun --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "bunx ultracite@latest check",
    "format": "bunx ultracite@latest fix",
    "check": "bun run typecheck && bun run lint && bun run test",
    "prepare": "lefthook install",
    "commit": "bunx czg",
    "release": "bunx semantic-release",
    "sync-readme-tech-stack": "bun src/scripts/sync-readme-tech-stack.ts"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "bun-types": "^1.3.5",
    "czg": "^1.12.0",
    "lefthook": "^2.0.13",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "lefthook"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/czg",
      "$schema": "https://raw.githubusercontent.com/Zhengqbbb/cz-git/main/docs/public/schema/cz-git.json"
    }
  }
}
