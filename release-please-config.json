{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "manifest",
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "separate-pull-requests": true,
  "bootstrap-sha": "main",
  "release-search-depth": 20,
  "commit-search-depth": 50,
  "always-link-local": true,
  "plugins": ["sentence-case", "conventional-commits"],
  "group-pull-request-title-pattern": "chore: release ${version}",

  "packages": {
    "docs": {
      "component": "docs",
      "package-name": "profile-weather-view-docs",
      "release-type": "node",
      "changelog-path": "src/docs/CHANGELOG.md",
      "draft": false,
      "prerelease": false,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "pull-request-title-pattern": "chore(release): documentation ${version}",
      "pull-request-header": "# Documentation Release ${version}\n\nThis release updates the documentation website for profile-weather-view.",
      "tag-separator": "/",

      "extra-files": [
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.docsVersion"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.channels.docs.latest"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.channels.docs.stable"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.releases[?(@.type=='docs')].version"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.releases[?(@.type=='docs')].date"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.releases[?(@.type=='docs')].timestamp"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.metadata.lastUpdated"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.metadata.lastUpdatedTimestamp"
        },
        {
          "type": "json",
          "path": "src/docs/.vitepress/meta.json",
          "jsonpath": "$.docsVersion"
        }
      ],

      "changelog-sections": [
        { "type": "docs", "section": "Documentation", "hidden": false },
        { "type": "feat", "section": "Features", "hidden": false },
        { "type": "fix", "section": "Bug Fixes", "hidden": false },
        { "type": "ui", "section": "UI/UX", "hidden": false },
        { "type": "a11y", "section": "Accessibility", "hidden": false },
        { "type": "i18n", "section": "Internationalization", "hidden": false },
        {
          "type": "perf",
          "section": "Performance Improvements",
          "hidden": false
        },
        { "type": "build", "section": "Build System", "hidden": false },
        { "type": "chore", "section": "Miscellaneous", "hidden": true }
      ],

      "changelog-types": [
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": false,
          "semver": "minor",
          "prefix": "üìö",
          "display-order": 1
        },
        {
          "type": "feat",
          "section": "Features",
          "hidden": false,
          "semver": "minor",
          "prefix": "‚ú®",
          "display-order": 2
        },
        {
          "type": "fix",
          "section": "Bug Fixes",
          "hidden": false,
          "semver": "patch",
          "prefix": "üêõ",
          "display-order": 3
        },
        {
          "type": "ui",
          "section": "UI/UX",
          "hidden": false,
          "semver": "patch",
          "prefix": "üé®",
          "display-order": 4
        },
        {
          "type": "a11y",
          "section": "Accessibility",
          "hidden": false,
          "semver": "patch",
          "prefix": "‚ôø",
          "display-order": 5
        },
        {
          "type": "i18n",
          "section": "Internationalization",
          "hidden": false,
          "semver": "patch",
          "prefix": "üåê",
          "display-order": 6
        },
        {
          "type": "perf",
          "section": "Performance Improvements",
          "hidden": false,
          "semver": "patch",
          "prefix": "‚ö°Ô∏è",
          "display-order": 7
        },
        {
          "type": "build",
          "section": "Build System",
          "hidden": false,
          "semver": null,
          "prefix": "üèóÔ∏è",
          "display-order": 8
        },
        {
          "type": "chore",
          "section": "Miscellaneous",
          "hidden": true,
          "semver": null,
          "prefix": "üßπ",
          "display-order": 9
        }
      ],

      "path": "src/docs",
      "exclude-paths": ["src/weather-update/**"]
    },

    "codebase": {
      "component": "codebase",
      "package-name": "profile-weather-view",
      "release-type": "node",
      "changelog-path": "CHANGELOG.md",
      "draft": false,
      "prerelease": false,
      "skip-github-release": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "pull-request-title-pattern": "chore(release): codebase ${version}",
      "pull-request-header": "# Codebase Release ${version}\n\nThis release updates the core functionality of profile-weather-view.",
      "tag-separator": "/",

      "extra-files": [
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.codebaseVersion"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.channels.codebase.latest"
        },
        {
          "type": "json",
          "path": "meta.json",
          "jsonpath": "$.channels.codebase.stable"
        },
        {
          "type": "json",
          "path": "package.json",
          "jsonpath": "$.version"
        }
      ],

      "path": ".",
      "exclude-paths": ["src/docs/**"]
    }
  }
}
