{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "üîÑ Renovate configuration for automated dependency updates",
  "extends": [
    "config:best-practices",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScope(deps)",
    ":semanticCommitScope(actions)",
    ":semanticCommitScope(bun)",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Asia/Dhaka",
  "schedule": ["* 2-4 * * 1"],
  "labels": ["dependencies", "renovate"],
  "assignees": ["tashfiqul-islam"],
  "reviewers": ["tashfiqul-islam"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üîÑ Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "ignoreTests": true,
  "commitMessagePrefix": "chore(deps):",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "{{newVersion}}",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessageSuffix": "[skip actions]",
  "commitBody": "[skip actions]",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  },
  "packageRules": [
    {
      "description": "üîÑ Auto-merge non-major updates for production dependencies (direct commit)",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "auto",
      "ignoreTests": true,
      "minimumReleaseAge": "3 days",
      "labels": ["dependencies", "auto-merge", "{{updateType}}"]
    },
    {
      "description": "üîß Auto-merge non-major updates for dev dependencies (direct commit)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "auto",
      "ignoreTests": true,
      "minimumReleaseAge": "3 days",
      "labels": ["dependencies", "dev", "auto-merge", "{{updateType}}"]
    },
    {
      "description": "üö® Major updates require manual approval",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "major", "needs-approval"],
      "addLabels": ["breaking-change"]
    },
    {
      "description": "üîí Security updates - always auto-merge",
      "matchDatasources": ["npm"],
      "vulnerabilityAlerts": {
        "enabled": true,
        "vulnerabilityFixStrategy": "highest"
      },
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["at any time"],
      "labels": ["dependencies", "security", "auto-merge"],
      "addLabels": ["critical"],
      "matchPackageNames": ["*"]
    },
    {
      "description": "üì¶ Bun runtime updates - weekly check",
      "matchPackageNames": ["bun", "bun-types", "@types/bun"],
      "matchDepTypes": ["packageManager", "devDependencies"],
      "schedule": ["after 2am and before 4am on monday"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "bun", "runtime", "auto-merge"],
      "semanticCommitScope": "bun",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "description": "‚ö° Group ESLint packages together",
      "matchPackageNames": ["/^@typescript-eslint/", "/^eslint/"],
      "groupName": "ESLint packages",
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "eslint", "linting", "auto-merge"]
    },
    {
      "description": "üß™ Group Vitest packages together",
      "matchPackageNames": ["/^@vitest/", "vitest"],
      "groupName": "Vitest packages",
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "vitest", "testing", "auto-merge"]
    },
    {
      "description": "üîß Group TypeScript packages together",
      "matchPackageNames": ["/^@types/", "typescript", "typescript-eslint"],
      "groupName": "TypeScript packages",
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "typescript", "types", "auto-merge"]
    },
    {
      "description": "‚öôÔ∏è GitHub Actions - weekly updates with auto-merge",
      "matchManagers": ["github-actions"],
      "schedule": ["after 2am and before 4am on monday"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "github-actions", "auto-merge"],
      "semanticCommitScope": "actions",
      "commitMessageTopic": "{{depName}}",
      "groupName": "GitHub Actions"
    },
    {
      "description": "üîê Pin GitHub Action digests for security",
      "matchManagers": ["github-actions"],
      "rangeStrategy": "pin",
      "pinDigests": true
    },
    {
      "description": "‚è∞ Node.js LTS updates only",
      "matchPackageNames": ["node", "@types/node"],
      "allowedVersions": "/^(18|20|22)\\./",
      "schedule": ["after 2am and before 4am on monday"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "labels": ["dependencies", "node", "lts", "auto-merge"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Bun version in package.json packageManager field",
      "managerFilePatterns": ["/^package\\.json$/"],
      "matchStrings": [
        "\"packageManager\":\\s*\"bun@(?<currentValue>[^\"]+)\""
      ],
      "autoReplaceStringTemplate": "\"packageManager\": \"bun@{{newValue}}\"",
      "datasourceTemplate": "npm",
      "depNameTemplate": "bun",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Bun version in package.json engines field",
      "managerFilePatterns": ["/^package\\.json$/"],
      "matchStrings": ["\"bun\":\\s*\">=(?<currentValue>[^\"]+)\""],
      "autoReplaceStringTemplate": "\"bun\": \">={{newValue}}\"",
      "datasourceTemplate": "npm",
      "depNameTemplate": "bun",
      "versioningTemplate": "semver"
    }
  ],
  "postUpdateOptions": ["npmDedupe", "bunDedupe"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.min.js"
  ],
  "postUpgradeTasks": {
    "commands": ["bun install", "bun run lint --fix", "bun run format"],
    "fileFilters": [
      "package.json",
      "bun.lock",
      "**/*.ts",
      "**/*.js",
      "**/*.json"
    ],
    "executionMode": "update"
  }
}
