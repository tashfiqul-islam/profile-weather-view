{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automated dependency management for profile-weather-view",
  "extends": [
    "config:best-practices",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScope(deps)"
  ],
  "timezone": "Asia/Dhaka",
  "schedule": ["after 2am and before 4am on monday"],
  "labels": ["dependencies", "renovate"],
  "assignees": ["tashfiqul-islam"],
  "reviewers": ["tashfiqul-islam"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ”„ Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "prConcurrentLimit": 10,
  "branchConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "commitMessagePrefix": "chore(deps):",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "{{newVersion}}",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessageSuffix": "[skip actions]",
  "commitBody": "[skip actions]",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "automerge": true,
    "schedule": ["at any time"]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "description": "Auto-merge minor/patch updates for production dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "minimumReleaseAge": "3 days",
      "labels": ["dependencies", "{{updateType}}"]
    },
    {
      "description": "Auto-merge minor/patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "minimumReleaseAge": "3 days",
      "labels": ["dependencies", "dev", "{{updateType}}"]
    },
    {
      "description": "Major updates require manual approval",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "major", "breaking-change"]
    },
    {
      "description": "Bun runtime updates - weekly check",
      "matchPackageNames": ["bun", "bun-types", "@types/bun"],
      "matchDepTypes": ["packageManager", "devDependencies"],
      "schedule": ["after 2am and before 4am on monday"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "bun", "runtime"],
      "semanticCommitScope": "bun",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "description": "Group Biome packages together",
      "matchPackageNames": ["/^@biomejs/"],
      "groupName": "Biome packages",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "biome", "linting"]
    },
    {
      "description": "Group TypeScript packages together",
      "matchPackageNames": ["/^@types/", "typescript"],
      "groupName": "TypeScript packages",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "typescript", "types"]
    },
    {
      "description": "Group semantic-release packages together",
      "matchPackageNames": ["/^@semantic-release/", "semantic-release"],
      "groupName": "semantic-release packages",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "release"]
    },
    {
      "description": "Group commitlint packages together",
      "matchPackageNames": ["/^@commitlint/"],
      "groupName": "commitlint packages",
      "automerge": true,
      "schedule": ["after 2am and before 4am on monday"],
      "labels": ["dependencies", "commitlint"]
    },
    {
      "description": "GitHub Actions - weekly updates with auto-merge",
      "matchManagers": ["github-actions"],
      "schedule": ["after 2am and before 4am on monday"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "github-actions"],
      "semanticCommitScope": "actions",
      "commitMessageTopic": "{{depName}}",
      "groupName": "GitHub Actions"
    },
    {
      "description": "Pin GitHub Action digests for security",
      "matchManagers": ["github-actions"],
      "rangeStrategy": "pin",
      "pinDigests": true
    },
    {
      "description": "Node.js LTS updates only",
      "matchPackageNames": ["node", "@types/node"],
      "allowedVersions": "/^(20|22|24)\\./",
      "schedule": ["after 2am and before 4am on monday"],
      "automerge": true,
      "labels": ["dependencies", "node", "lts"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Bun version in package.json packageManager field",
      "managerFilePatterns": ["/^package\\.json$/"],
      "matchStrings": [
        "\"packageManager\":\\s*\"bun@(?<currentValue>[^\"]+)\""
      ],
      "autoReplaceStringTemplate": "\"packageManager\": \"bun@{{newValue}}\"",
      "datasourceTemplate": "npm",
      "depNameTemplate": "bun",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Bun version in package.json engines field",
      "managerFilePatterns": ["/^package\\.json$/"],
      "matchStrings": ["\"bun\":\\s*\">=(?<currentValue>[^\"]+)\""],
      "autoReplaceStringTemplate": "\"bun\": \">={{newValue}}\"",
      "datasourceTemplate": "npm",
      "depNameTemplate": "bun",
      "versioningTemplate": "semver"
    }
  ],
  "postUpdateOptions": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.min.js"
  ],
  "postUpgradeTasks": {
    "commands": ["bun install --frozen-lockfile || bun install"],
    "fileFilters": ["package.json", "bun.lock"],
    "executionMode": "update"
  }
}
